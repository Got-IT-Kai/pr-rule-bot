{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://code.com/schemas/v1/context/context-collected.json",
  "title": "ContextCollectedEvent",
  "description": "Event published when PR context collection is completed or failed",
  "type": "object",
  "required": [
    "eventId",
    "contextId",
    "repositoryOwner",
    "repositoryName",
    "pullRequestNumber",
    "title",
    "status",
    "correlationId",
    "timestamp"
  ],
  "properties": {
    "eventId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this event instance"
    },
    "contextId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the collected context"
    },
    "repositoryOwner": {
      "type": "string",
      "minLength": 1,
      "description": "GitHub repository owner/organization"
    },
    "repositoryName": {
      "type": "string",
      "minLength": 1,
      "description": "GitHub repository name"
    },
    "pullRequestNumber": {
      "type": "integer",
      "minimum": 1,
      "description": "Pull request number"
    },
    "title": {
      "type": "string",
      "description": "Pull request title"
    },
    "diff": {
      "type": ["string", "null"],
      "description": "Git diff content (null if FAILED or SKIPPED)"
    },
    "status": {
      "type": "string",
      "enum": ["COMPLETED", "SKIPPED", "FAILED"],
      "description": "Status of context collection"
    },
    "correlationId": {
      "type": "string",
      "format": "uuid",
      "description": "ID for tracing this request across services"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when event was created"
    }
  }
}
